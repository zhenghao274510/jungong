.ss-scroll-navbar {
  width: 100%;
  height: 70rpx;
  padding: 20rpx;
  background-color: #fff;
  white-space: nowrap;
}
.ss-scroll-navbar .nav-item-other {
  text-align: center;
  padding: 0rpx 20rpx;
  color: #666666;
  display: inline-block;
  position: relative;
  font-size: 30rpx;
  background: #f7f7f7;
  border-radius: 24px;
  margin-right: 20rpx;
}
.ss-scroll-navbar .nav-item {
  height: 70rpx;
  text-align: center;
  padding: 0rpx 20rpx;
  color: #666666;
  display: inline-block;
  position: relative;
  font-size: 30rpx;
}
.ss-scroll-navbar .nav-item .title {
  line-height: 70rpx;
}
.ss-scroll-navbar .current {
  color: #042823 !important;
}
.ss-scroll-navbar .current::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 36rpx;
  height: 8rpx;
  background: #042823;
  border-radius: 4rpx;
}

